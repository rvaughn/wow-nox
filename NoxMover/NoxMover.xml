<!--
  Nox Mover

  Moves various UI elements to make room for the Nox Info Bar

  @author Gruma
-->

<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="NoxMover.lua"/>

  <Frame name="NoxMover" toplevel="false" frameStrata="BACKGROUND" parent="UIParent">
    <Size>
      <AbsDimension x="1" y="1"/>
    </Size>
    <Anchors>
      <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT">
        <Offset>
          <AbsDimension x="0" y="0"/>
        </Offset>
      </Anchor>
    </Anchors>
    <Scripts>
      <OnLoad>
        NoxMover_OnLoad(self);
      </OnLoad>
      <OnEvent>
        NoxMover_OnEvent(self, event, ...);
      </OnEvent>
      <OnUpdate>
        NoxMover_OnUpdate(self, elapsed);
      </OnUpdate>
    </Scripts>
  </Frame>

  <Frame name="NoxBuffsFrame" toplevel="false" frameStrata="BACKGROUND" parent="UIParent">
    <Size>
      <AbsDimension x="1" y="1"/>
    </Size>
  </Frame>

  <Frame name="NoxBGFlagFrame" toplevel="false" frameStrata="BACKGROUND" parent="UIParent">
    <Size>
      <AbsDimension x="1" y="1"/>
    </Size>
  </Frame>

  <Frame name="NoxPlayerFrame" toplevel="false" frameStrata="BACKGROUND" parent="UIParent">
    <Size>
      <AbsDimension x="1" y="1"/>
    </Size>
  </Frame>

  <Frame name="NoxTargetFrame" toplevel="false" frameStrata="BACKGROUND" parent="UIParent">
    <Size>
      <AbsDimension x="1" y="1"/>
    </Size>
  </Frame>

  <Frame name="NoxMinimapFrame" toplevel="false" frameStrata="BACKGROUND" parent="UIParent">
    <Size>
      <AbsDimension x="1" y="1"/>
    </Size>
  </Frame>
</Ui>
